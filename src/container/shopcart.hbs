<main>
        <div class="card">
    <div class="nav d-flex">
   {{#each navigation.links}}
    <div class="nav-item">
    <a class="nav-link mr-3" href="{{this.href}}" role="button">{{this.text}}</a>
    </div>
   {{/each}}
   <a class="nav-link disabled">Disabled</a>
   </div>
   </div>
   </div>
   </div>

   <h2 class="mt-4">{{header.title}}</h2>
    <a class= "btn btn-outline-secondary mb-3" href="{{header.button.link}}">{{header.button.text}}</a>

    <hr>

  <h2>Товари</h2>
<table class="table caption-top">
  <tbody>
    {{#each goodsBlock}}
      {{> cartGoodsItem item=this}}
    {{/each}}
  </tbody>
</table>

  <h1>{{total.title}}</h1>
  <h2>{{total.amount}}</h2>
  <p>{{total.delivery}}</p>
  {{#each total.buttons}}
  <a href="{{this.link}}" {{#if this.isSuccess}}class="success btn btn-success me-2"{{/if}} {{#if this.isOutline}}class="outline btn btn-outline-success "{{/if}}>{{this.text}}</a>
  {{/each}}
<hr>

<div class="card-container">
  <div class="row">
    <h3> <p class="text-center">{{goodsOtherBlock.title}}</p></h3>
    {{#each goodsOtherBlock.cards}}
    <div class="col-md-3 col-lg-4 mb-4 pt-5">
      <div class="card">
        <img src="{{image}}" class="card-img-top" alt="{{title}}">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          {{#if this.isHot}}
          <span class="badge bg-warning">Hot</span>
          {{/if}}
          {{#if isNew}}
          <span class="badge bg-primary">New</span>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<hr>

<div class="card text-bg-dark ">
  <div class="card-body">
    <h2 class="card-header">{{subscribe.header}}</h2>
    <p class="card-text">{{subscribe.description}}</p>
    {{#each subscribe.buttons}}
    <div class="d-grid gap-2 col-6 mx-auto pt-2"></div>
    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
    {{/each}}
  </div>
</div>
<br>
<hr>

<div class="row g-2">
  {{#each footer}}
      <div class="nav col-2">
        <div>
          {{#each this}}
             <div>
              <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
             </div>
        {{/each}}
       </div>
     </div>
 {{/each}}

</div>

</main>