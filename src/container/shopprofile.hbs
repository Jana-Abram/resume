<main>
    <div class="card">
    <div class="nav d-flex">
   {{#each navigation.links}}
    <div class="nav-item">
    <a class="nav-link mr-3" href="{{this.href}}" role="button">{{this.text}}</a>
    </div>
   {{/each}}
   <a class="nav-link disabled">Disabled</a>
   </div>
   </div>
   </div>
   </div>

<h2 class="mt-5">{{header}}</h2>

<ul class="nav nav-tabs">
  <li class="nav-item">
 {{#each purchase.tabs}}
    <li class="nav-item">
      <a class=" nav-link " href="#">{{this}}</a>
    </li>
    {{/each}}
</ul>

<div class="action-block">
  <div class="d-flex align-items-center">
    <input type="text" class="form-control me-2" placeholder="{{purchase.actionBlock.input.placeholder}}">

    <div class="buttons d-flex ">
      {{#each purchase.actionBlock.buttons}}
      <a href="{{link}}" class="btn
        {{#if isSuccess}}btn-success{{/if}}
        {{#if isOutline}}btn-outline-primary{{/if}}
        {{#if isDanger}}btn-danger{{/if}}">
        {{text}}
      </a>
      {{/each}}
    </div>
  </div>
</div>

<hr>
<div class="container-fluid">
  <table class="table table-hover">
    <tbody>
      {{#each purchase.itemList}}
        {{> purchaseItem this}}
      {{/each}}
    </tbody>
  </table>
</div>

<div class="user-info">
<div class="card">
  <div class="card-body">
  <h2><div class="title">{{userInfo.title}}</div></h2>
<div class="card">
  <div class="card-body d-flex justify-content-between">
    <div class="flex-grow-1 me-5">
      <h5 class="card-title">{{userInfo.profileData.fullName.surname.title}}</h5>
      <p class="card-text">{{userInfo.profileData.fullName.surname.value}}</p>
    </div>
    <div class="flex-grow-1 me-5">
      <h5 class="card-title">{{userInfo.profileData.fullName.name.title}}</h5>
      <p class="card-text">{{userInfo.profileData.fullName.name.value}}</p>
    </div>
    <div class="flex-grow-1">
      <h5 class="card-title">{{userInfo.profileData.fullName.middleName.title}}</h5>
      <p class="card-text">{{userInfo.profileData.fullName.middleName.value}}</p>
    </div>
  </div>
</div>

<div class="card mt-4">
  <div class="card-body d-flex justify-content-between">
    <div class="flex-grow-1 me-5">
      <h5 class="card-title">{{userInfo.profileData.otherInfo.birthday.title}}</h5>
      <p class="card-text">{{userInfo.profileData.otherInfo.birthday.value}}</p>
    </div>
    <div class="flex-grow-1 me-5">
      <h5 class="card-title">{{userInfo.profileData.otherInfo.sex.title}}</h5>
      <p class="card-text">{{userInfo.profileData.otherInfo.sex.value}}</p>
    </div>
    <div class="flex-grow-1">
      <h5 class="card-title">{{userInfo.profileData.otherInfo.language.title}}</h5>
      <p class="card-text">{{userInfo.profileData.otherInfo.language.value}}</p>
    </div>
  </div>
</div>

<div class="card mt-4">
  <div class="card-footer d-flex justify-content-between">
    {{#each userInfo.buttons}}
    <a href="{{this.link}}" class="btn {{#if this.isPrimary}}btn-primary{{/if}} {{#if this.isSecondary}}btn btn-outline-secondary {{/if}} {{#if this.isDanger}}btn btn-outline-danger {{/if}}">{{this.text}}</a>
    {{/each}}
  </div>
</div>
  </div>
</div>

 <div class="mt-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{userInfo.recipients.title}}</h5>

      <div class="row">
        {{#each userInfo.recipients.users}}
        <div class="col-sm-6 mb-3 mb-sm-0">
          <div class="card">
            <div class="card-body">
              <h6>{{name}}</h6>
              <p>{{phone}}</p>
              <a href="{{button.link}}" class="btn btn-primary">{{button.text}}</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

</div>

<div class="mt-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{userInfo.contacts.title}}</h5>

      <div class="row">
        {{#each userInfo.contacts.contactData}}
        <div class="col-sm-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h6>{{title}}</h6>
              <p>{{value}}</p>
              <a href="{{button.link}}" class="btn {{#if button.isPrimary}}btn-primary{{/if}} {{#if button.isSecondary}}btn btn-outline-secondary {{/if}} {{#if button.isDanger}}btn btn-outline-danger {{/if}}">{{button.text}}</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<hr>
<div class="row g-2">
  {{#each footer}}
      <div class="nav col-2">
        <div>
          {{#each this}}
             <div>
              <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
             </div>
        {{/each}}
       </div>
     </div>
 {{/each}}

</div>

</main>