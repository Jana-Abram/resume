
<main>
     <div class="card">
    <div class="nav d-flex">
   {{#each navigation.links}}
    <div class="nav-item">
    <a class="nav-link mr-3" href="{{this.href}}" role="button">{{this.text}}</a>
    </div>
   {{/each}}
   <a class="nav-link disabled">Disabled</a>
   </div>
   </div>
   </div>
   </div>

  <div class="row">
    <div class="col-md-8">
      <h2 class="mt-5">{{formBlock.header}}</h2>
      <div class="rating">
        <span class="title">{{formBlock.rating.title}}</span>
        <span class="value">{{formBlock.rating.value}}</span>
      </div>
    </div>

    <div class="col-md-4 mt-5">
      <div class="card">
        <img src="{{formBlock.goodsInfo.photo}}" class="card-img-top" alt="Product Photo" style="max-width: 50%; height: auto;">
        <div class="card-body">
          <h5 class="card-title">{{formBlock.goodsInfo.name}}</h5>
        </div>
      </div>
    </div>
  </div>
</div>

 <div class="action-block mt-2">
  <div class="col">
    <ul class="nav nav-tabs">
      {{#each formBlock.actionBlock.tabs}}
      <li class="nav-item">
        <a class="nav-link {{#if isActive}}active{{/if}}" href="#">{{text}}</a>
      </li>
      {{/each}}
    </ul>

<div class="row">
  <div class="col-md-8">
    <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title">{{formBlock.actionBlock.report.title}}</h5>
        <a href="{{formBlock.actionBlock.report.button.link}}" class="btn btn-secondary">{{formBlock.actionBlock.report.button.text}}</a>
      </div>
    </div>
  </div>

  <div class="col-md-4" >
    <div class="card mt-4">
      <div class="card-body">
        <p class="card-text">{{formBlock.goodsInfo.seller.value}}</p>
        <p class="card-text">{{formBlock.goodsInfo.price}}</p>
        {{#each formBlock.goodsInfo.buttons}}
        <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{else if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div>
  <h3 class="mt-5">{{formBlock.feedbackBlock.title}}</h3>
  <div class="btn-group" role="group">
    {{#each formBlock.feedbackBlock.buttons}}
    <a href="{{link}}" class="btn {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} me-2">{{text}}</a>
    {{/each}}
  </div>
</div>
<hr>

  <div class="col-md-12">
    <h2 class="mt-5">{{formBlock.header}}</h2>
    <div class="rating">
      <span class="title">{{formBlock.rating.title}}</span>
      <span class="value">{{formBlock.rating.value}}</span>
    </div>

   {{#each reviewList}}
        {{> reviewItem reviewList=this}}
     {{/each}}
      
<div class="card text-light text-center mt-4 bg-success  ">
  <div class="card-body">
    <h2 class="card-title">{{service.title}}</h2>
    <p class="card-text">{{service.description}}</p>
    {{#each service.buttons}}
  <a href="{{link}}" class="btn btn-primary">{{text}}</a>
  {{/each}}
  </div>
</div>
<hr>

<div class="row g-2">
  {{#each footer}}
      <div class="nav col-2">
        <div>
          {{#each this}}
             <div>
              <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
             </div>
        {{/each}}
       </div>
     </div>
 {{/each}}
</div>




</main>








