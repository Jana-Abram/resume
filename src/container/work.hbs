{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title data="Work history" big=true}}
            </div>
            <div>
                <ul>
                   {{#each works}}
                        <li>
                            <div>{{position}}</div>

                            <br>

                           <div>
                               {{duration.from}}
                                -
                               {{#if duration.to}}
                                  {{duration.to}}
                               {{else}}
                                  (працюємо)
                               {{/if}}
                           </div>

                            <br>

                        <div>
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                        </div>

                        <br>
                        <br>

                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>

                        <br>

                    <ul> 
                        {{#each projects}} 
                        <div>          
                            {{#if company.url}}
                             {{> link text=company.name href=company.url blank=true noLine=true}}
                    
                             {{else}}
                                <b>{{company.name}}</b>
                             {{/if}}
                         </div>
                            <div>{{about}} </div>
                            <br>
                        <div><em>Project stacks  ({{stackAmount}})</em> </div>
                            <br>
                            <ul> {{#each stacks}} <li>{{name}} </li> {{/each}} </ul>
                            <br>
                            <div>
                            <div> <em>Project awards ({{awardAmount}}) </em> </div>
                            <ul>
                            <br>
                                {{#each awards}}
                                    <li>{{name}}</li>
                                {{/each}}
                            </ul>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                <br>
                {{/each}}          
            </div>
        </section>
    </main>
   {{/with}}
</div>

