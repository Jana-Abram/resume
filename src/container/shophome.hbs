<div>
    <div class="card">
    <div class="nav d-flex">
   {{#each navigation.links}}
    <div class="nav-item">
    <a class="nav-link mr-3" href="{{this.href}}" role="button">{{this.text}}</a>
    </div>
   {{/each}}
   <a class="nav-link disabled">Disabled</a>
   </div>
   </div>
   </div>
   </div>
  


<div>
     <h1 class=" my-5 text-center">{{newsBlock.title}}</h1>
     <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-2">
    {{#each newsBlock.cards}}
    <div class="col">
      <div class="card text-bg-dark mb-3">
        <div class="card-header">{{title}}
        {{#if isTop}}
          <span class="badge bg-warning">Top</span>
          {{/if}}
          {{#if isNew}}
          <span class="badge bg-success">New</span>
          {{/if}}
        </div>
        <div class="card-body">
          <h5 class="card-title"> {{title}}</h5>
          <p class="card-text">{{description}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<hr>
<br>

  <ul class="nav nav-tabs">
    {{#each goodsBlock.tabs}}
    <li class="nav-item">
      <a class="nav-link {{#if isActive}}active{{/if}}" href="#" {{#if isDisabled}}disabled{{/if}}>{{text}}</a>
    </li>
    {{/each}}
  </ul>


<div class="card-container">
  <div class="row">
    {{#each goodsBlock.cards}}
    <div class="col-md-6 col-lg-4 mb-4 pt-5">
      <div class="card">
        <img src="{{image}}" class="card-img-top" alt="{{title}}">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          {{#if this.isHot}}
          <span class="badge bg-warning">Hot</span>
          {{/if}}
          {{#if isNew}}
          <span class="badge bg-primary">New</span>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="card text-bg-dark ">
  <div class="card-body">
    <h2 class="card-header">{{subscribe.header}}</h2>
    <p class="card-text">{{subscribe.description}}</p>
    {{#each subscribe.buttons}}
    <div class="d-grid gap-2 col-6 mx-auto pt-2"></div>
    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
    {{/each}}
  </div>
</div>
<br>
<hr>

<div class="card text-center text-bg-success ">
  <div class="card-body">
    <h5 class="card-title">{{service.title}}</h5>
    <p class="card-text">{{service.description}}</p>
     {{#each service.buttons}}
    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
    {{/each}}
  </div>
</div>
<br>
<hr>


<div class="row g-2">

  {{#each footer}}
      <div class="nav col-2">
        <div>
          {{#each this}}
             <div>
              <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
             </div>
        {{/each}}
       </div>
     </div>
 {{/each}}
</div>


</div>
