<div class="col">
  <div class="card">
    <img src="{{img}}" class="card-img-top" alt="...">
    <div class="card-body">
      {{#if isHot}}
        <span class="badge bg-danger">Гаряче</span>
      {{/if}}
      {{#if isNew}}
        <span class="badge bg-success">Нове</span>
      {{/if}}
      <br>
      {{#if isFast}}
        <button type="button" class="btn btn-primary btn-sm">Швидка доставка</button>
      {{/if}}
      {{#if isFree}}
        <button type="button" class="mt-2 btn btn-secondary btn-sm">Безкоштовна доставка</button>
      {{/if}}
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">{{review.amount}} {{review.text}}</p>
      <p class="card-text">{{price}}</p>
      <p class="card-text">{{delivery}}</p>
      <div class="button-group">
        {{#each buttons}}
          <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
        {{/each}}
      </div>
      <div class="card-text mt-2">
        {{#each characteristics}}
          <p><strong>{{title}}:</strong> {{value}}</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>